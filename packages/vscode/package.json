{
  "name": "jonmagic-scripts",
  "displayName": "Jonmagic Scripts",
  "description": "Utilities for my Brain repo (Daily Projects, wikilinks, etc.)",
  "version": "0.0.0",
  "publisher": "jonmagic",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonmagic/scripts",
    "directory": "packages/vscode"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jonmagic.createDailyProjectNote",
        "title": "Jonmagic: Create Daily Project Note"
      },
      {
        "command": "jonmagic.addFrontmatter",
        "title": "Jonmagic: Add Frontmatter to Current File"
      },
      {
        "command": "jonmagic.previousWeek",
        "title": "Brain: Previous Week",
        "icon": "$(arrow-left)"
      },
      {
        "command": "jonmagic.nextWeek",
        "title": "Brain: Next Week",
        "icon": "$(arrow-right)"
      },
      {
        "command": "jonmagic.goToCurrentWeek",
        "title": "Brain: Go to Current Week",
        "icon": "$(home)"
      },
      {
        "command": "jonmagic.refresh",
        "title": "Brain: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "jonmagic.deleteFile",
        "title": "Delete"
      },
      {
        "command": "jonmagic.revealInFinder",
        "title": "Reveal in Finder"
      },
      {
        "command": "jonmagic.copyPath",
        "title": "Copy Path"
      },
      {
        "command": "jonmagic.copyFileContents",
        "title": "Copy File Contents"
      }
    ],
    "configuration": {
      "title": "Jonmagic Scripts",
      "properties": {
        "jonmagic.brainPath": {
          "type": "string",
          "default": "~/Brain",
          "description": "Path to the Brain repository folder"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "brain-sidebar",
          "title": "Brain",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "brain-sidebar": [
        {
          "id": "brainWeekView",
          "name": "This Week",
          "contextualTitle": "Brain"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "jonmagic.previousWeek",
          "when": "view == brainWeekView && jonmagic.hasPreviousWeek",
          "group": "navigation@1"
        },
        {
          "command": "jonmagic.nextWeek",
          "when": "view == brainWeekView && jonmagic.hasNextWeek",
          "group": "navigation@2"
        },
        {
          "command": "jonmagic.goToCurrentWeek",
          "when": "view == brainWeekView",
          "group": "navigation@3"
        },
        {
          "command": "jonmagic.refresh",
          "when": "view == brainWeekView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "jonmagic.deleteFile",
          "when": "view == brainWeekView && viewItem == file",
          "group": "7_modification"
        },
        {
          "command": "jonmagic.revealInFinder",
          "when": "view == brainWeekView && viewItem == file",
          "group": "6_copypath"
        },
        {
          "command": "jonmagic.copyPath",
          "when": "view == brainWeekView && viewItem == file",
          "group": "6_copypath"
        },
        {
          "command": "jonmagic.copyFileContents",
          "when": "view == brainWeekView && viewItem == file",
          "group": "6_copypath"
        }
      ]
    }
  },
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "watch": "node ./scripts/build.mjs --watch",
    "package": "bunx @vscode/vsce package --no-dependencies --skip-license",
    "typecheck": "bun tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@jonmagic/scripts-core": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.8.2"
  }
}
