#!/usr/bin/env bash

# Check if Homebrew is installed, install if not
if ! command -v brew >/dev/null 2>&1; then
  echo "Homebrew is not installed. Installing Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  # Add Homebrew to PATH for the current session (for Apple Silicon and Intel)
  if [[ -d "/opt/homebrew/bin" ]]; then
    eval "$('/opt/homebrew/bin/brew' shellenv)"
  elif [[ -d "/usr/local/bin" ]]; then
    eval "$('/usr/local/bin/brew' shellenv)"
  fi
else
  echo "homebrew is already installed"
fi

# Check if fzf is installed, install via Homebrew if not
if ! command -v fzf >/dev/null 2>&1; then
  echo "fzf not found. Installing via Homebrew..."
  brew install fzf
else
  echo "fzf is already installed."
fi

# Check if llm is installed, install via Homebrew if not
if ! command -v llm >/dev/null 2>&1; then
  echo "llm not found. Installing via Homebrew..."
  brew install llm
else
  echo "llm is already installed."
fi

# Check if gh (GitHub CLI) is installed, install via Homebrew if not
if ! command -v gh >/dev/null 2>&1; then
  echo "gh (GitHub CLI) not found. Installing via Homebrew..."
  brew install gh
else
  echo "gh (GitHub CLI) is already installed."
fi

# Install Ruby gems using Bundler
if ! command -v bundle >/dev/null 2>&1; then
  echo "Bundler not found. Installing via gem..."
  gem install bundler:2.6.9
fi

# Ensure we're using the correct Bundler version
current_bundler_version=$(bundle --version | grep -o "[0-9]\+\.[0-9]\+\.[0-9]\+")
required_bundler_version="2.6.9"

if [ "$current_bundler_version" != "$required_bundler_version" ]; then
  echo "Bundler version mismatch. Installing Bundler $required_bundler_version..."
  gem install bundler:$required_bundler_version
fi

echo "Installing Ruby gems..."
bundle install
