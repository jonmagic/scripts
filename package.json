{
  "name": "@jonmagic/scripts",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/vscode",
    "packages/raycast"
  ],
  "scripts": {
    "build": "bun run build:core && bun run build:cli && bun run build:vscode",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:vscode": "cd packages/vscode && bun run build",
    "lint": "bunx eslint \"**/*.{ts,tsx,js,mjs,cjs}\"",
    "test": "bun test",
    "typecheck": "bunx tsc -b"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "bun-types": "^1.3.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.20.0"
  }
}
